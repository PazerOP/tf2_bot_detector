{
	"$schema": "https://raw.githubusercontent.com/moebkun/tf2_bot_detector/master/schemas/v3/rules.schema.json",
	"file_info": {
		"authors": [
			"moeb"
		],
		"description": "This is my test version for the rule-list",
		"title": "Moeb's test ruleset"
	},
	"rules": [
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Regex Name match",
			"triggers": {
				"username_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"braaaap \\d+",
						"swonk bot \\d+",
						"S.* bit\\.ly\\/2UnS5z8",
						"(\\(\\d\\))?Morpheus Bot Removal Service",
						"\\[VALVE\\][\u5350\u534d]?N[i\u00ed]\\w[g]+\\w+[i\u00ed]\\w[l]+[e\\d]r[\u534d\u5350]?",
						"(\\(\\d+\\))?\\/id\\/heinrichderpro",
						"(\\(\\d+\\))?\\[VALVE\\]Twilight Sparkle(\n)?",
						"(\\(\\d+\\))?shoppy\\.gg\\/@d3fc0n6",
						"(\\(\\d+\\))?Festive Hitman",
						"(\\(\\d+\\))?cheemsburger gaming",
						"(\\(\\d+\\))?blu ((red)|(me))"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Full Name Match",
			"triggers": {
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"braaaap god"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Name and Avatar match",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": "7a6e1f6ffeea6215b18b27a5b18e4b7d910a06f7"
					}
				],
				"mode": "match_all",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"(\\(\\d+\\))?cory"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Invisible Character/namestealer",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\u205f",
						"\u200f",
						"\u200e",
						"\u200d",
						"\u200c",
						"\u200b",
						"\u2060",
						"\u202c",
						"\u202d",
						"\ufeff",
						"\u0e4a",
						"\u0e38",
						"\u202c",
						"\n"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Avatar match",
			"triggers": {
				"nickname_text_match": [
					{
						"nickname": "moeb"
					}
				]
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[BETA]Malicious chat message detected",
			"triggers": {
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\n",
						"\r\n",
						"\r"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"racist"
				]
			},
			"description": "[TF2BD]Bigot detected",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "regex",
					"patterns": [
						"\\w*N\udb40\udc21\udb40\udc21IGGE\udb40\udc21\udb40\udc21R\\w*",
						"\\w*\u0274\u026a\u0262\u0262\u1d07\u0280\\w*",
						"\\w*n\u0456gg\u0435r\\w*",
						"\\w*N\u00cdGGER\\w*",
						"\\w*nigg\u0435r\\w*",
						"\\w*N1GG3R\\w*",
						"\\w*nigger\\w*",
						"\\w*nigg4\\w*",
						"\\w*niggz\\w*",
						"niggers"
					]
				},
				"mode": "match_any"
			}
		}
	]
}
