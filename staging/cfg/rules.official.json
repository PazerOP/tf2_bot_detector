{
	"$schema": "https://raw.githubusercontent.com/PazerOP/tf2_bot_detector/master/schemas/v3/rules.schema.json",
	"file_info": {
		"authors": [
			"moeb"
		],
		"description": "The Official rule list for TF2 Bot Detector",
		"title": "Official rule list",
		"update_url": "https://raw.githubusercontent.com/PazerOP/tf2_bot_detector/master/staging/cfg/rules.official.json"
	},
	"rules": [
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[TF2BD]Name match",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"matchroom.live/snooker",
						"braaaap \\d+",
						"swonk bot \\d+",
						"[VALVE]Niggerkiller",
						"[VALVE] Twilight Sparkle"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[TF2BD]Invisible Character/namestealer",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"mode": "match_any",
				"username_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\u0e4a",
						"\u202c"
					]
				}
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[TF2BD]Avatar match",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				]
			}
		},
		{
			"actions": {
				"mark": [
					"cheater"
				]
			},
			"description": "[TF2BD]Malicious chat message detected",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "contains",
					"patterns": [
						"\n",
						"\r\n",
						"\r"
					]
				},
				"mode": "match_any"
			}
		},
		{
			"actions": {
				"mark": [
					"racist"
				]
			},
			"description": "[TF2BD]Bigot detected",
			"triggers": {
				"avatar_match": [
					{
						"avatar_hash": ""
					}
				],
				"chatmsg_text_match": {
					"case_sensitive": false,
					"mode": "word",
					"patterns": [
						"nigger",
						"niggers"
					]
				},
				"mode": "match_any"
			}
		}
	]
}
